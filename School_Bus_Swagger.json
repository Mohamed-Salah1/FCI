{
  "openapi": "3.0.0",
  "info": {
    "title": "School Bus Management API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login"
          }
        }
      }
    },
    "/api/buses": {
      "get": {
        "summary": "Get all buses (Admin)",
        "responses": {
          "200": {
            "description": "List of buses"
          }
        }
      }
    }
  }
}